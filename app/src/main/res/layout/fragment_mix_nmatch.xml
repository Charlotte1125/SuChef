<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mis571_group_d.suchef.fragment.MixNMatchFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <Switch
                android:id="@+id/search_matching_recipe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/mix_search_match_all_ingredients" />

        </LinearLayout>

        <Button
            android:id="@+id/search_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/mix_search_button" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:background="#c0c0c0" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Utensils"
            android:textSize="20dp"
            android:textColor="@color/colorPrimaryDark"/>

        <GridView
            android:id="@+id/utensils_grid"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:numColumns="3"
            android:orientation="horizontal" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:background="#c0c0c0" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Ingredients"
            android:textSize="20dp"
            android:textColor="@color/colorPrimaryDark"/>

        <GridView
            android:id="@+id/ingredient_grid"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:numColumns="3"/>
    </LinearLayout>
</ScrollView>
